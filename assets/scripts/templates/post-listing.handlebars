{{#each posts as |post|}}
  {{log post}}
  <section data-id="{{post._id}}">
    <h6>Title: {{post.title}}</h6>
    <h6>Body:</h6>
    <h6>
      {{post.body}}
    </h6>
    <h6>ID: {{post._id}}</h6>
    <h6>User: {{#if post.user}}{{post.user}}{{else}}No user provided.{{/if}}</h6>
    <button class="btn btn-danger delete-post" data-id="{{post._id}}">Remove Post</button>
    <h6>---------------------</h6>
  </section>

{{/each}}
